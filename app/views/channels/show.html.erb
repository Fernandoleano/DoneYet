<div class="flex h-full">
  <!-- Channel Sidebar -->
  <div class="w-64 bg-gray-800 border-r border-gray-700 flex flex-col">
    <div class="p-4 border-b border-gray-700">
      <h2 class="font-bold text-lg mb-4">üí¨ Team Chat</h2>
      <button onclick="document.getElementById('newChannelModal').classList.remove('hidden')" class="w-full py-2 px-4 bg-indigo-600 hover:bg-indigo-500 rounded-lg text-sm font-semibold transition">
        + New Channel
      </button>
    </div>
    
    <div class="flex-1 overflow-y-auto p-4 space-y-6">
      <!-- Channels Section -->
      <div>
        <h3 class="text-xs font-semibold text-gray-400 uppercase tracking-wider mb-2">Channels</h3>
        <div class="space-y-1">
          <% @channels.each do |channel| %>
            <%= link_to channel_path(channel), class: "block px-3 py-2 rounded-lg hover:bg-gray-700 transition #{channel.id == @channel.id ? 'bg-gray-700 text-white' : 'text-gray-300'}" do %>
              <span class="font-medium"><%= channel.display_name %></span>
            <% end %>
          <% end %>
        </div>
      </div>
      
      <!-- Direct Messages Section -->
      <div>
        <h3 class="text-xs font-semibold text-gray-400 uppercase tracking-wider mb-2">Direct Messages</h3>
        <div class="space-y-1">
          <% if @direct_messages.any? %>
            <% @direct_messages.each do |dm| %>
              <% partner = dm.dm_partner(Current.user) %>
              <% if partner %>
                <%= link_to channel_path(dm), class: "flex items-center gap-2 px-3 py-2 rounded-lg hover:bg-gray-700 transition #{dm.id == @channel.id ? 'bg-gray-700 text-white' : 'text-gray-300'}" do %>
                  <% if partner.avatar.attached? %>
                    <%= image_tag partner.avatar, class: "w-6 h-6 rounded-full object-cover" %>
                  <% else %>
                    <div class="w-6 h-6 bg-indigo-600 rounded-full flex items-center justify-center text-xs font-bold">
                      <%= partner.name.first.upcase %>
                    </div>
                  <% end %>
                  <span class="font-medium"><%= partner.name %></span>
                <% end %>
              <% end %>
            <% end %>
          <% else %>
            <p class="text-xs text-gray-500 px-3 py-2">No direct messages yet</p>
          <% end %>
        </div>
      </div>
      
      <!-- Team Members Section -->
      <div>
        <h3 class="text-xs font-semibold text-gray-400 uppercase tracking-wider mb-2">Team Members</h3>
        <div class="space-y-1">
          <% @workspace_members.each do |member| %>
            <%= button_to start_dm_path(member), method: :post, class: "w-full flex items-center gap-2 px-3 py-2 rounded-lg hover:bg-gray-700 transition text-gray-300 text-left" do %>
              <% if member.avatar.attached? %>
                <%= image_tag member.avatar, class: "w-6 h-6 rounded-full object-cover" %>
              <% else %>
                <div class="w-6 h-6 bg-indigo-600 rounded-full flex items-center justify-center text-xs font-bold">
                  <%= member.name.first.upcase %>
                </div>
              <% end %>
              <span class="font-medium"><%= member.name %></span>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Chat Area -->
  <div class="flex-1 flex flex-col">
    <!-- Channel Header -->
    <div class="h-16 bg-gray-800 border-b border-gray-700 flex items-center px-6">
      <div class="flex items-center gap-3">
        <% if @channel.is_direct_message? %>
          <% partner = @channel.dm_partner(Current.user) %>
          <% if partner %>
            <% if partner.avatar.attached? %>
              <%= image_tag partner.avatar, class: "w-10 h-10 rounded-full object-cover" %>
            <% else %>
              <div class="w-10 h-10 bg-indigo-600 rounded-full flex items-center justify-center font-bold">
                <%= partner.name.first.upcase %>
              </div>
            <% end %>
            <div>
              <h3 class="font-bold text-lg"><%= partner.name %></h3>
              <p class="text-sm text-gray-400">Direct Message</p>
            </div>
          <% end %>
        <% else %>
          <div>
            <h3 class="font-bold text-lg"><%= @channel.display_name %></h3>
            <% if @channel.description.present? %>
              <p class="text-sm text-gray-400"><%= @channel.description %></p>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    
    <!-- Messages -->
    <div class="flex-1 overflow-y-auto p-6 space-y-4" id="messages">
      <% if @messages.any? %>
        <% @messages.each do |message| %>
          <div class="flex items-start gap-3 group hover:bg-gray-800/50 px-4 py-2 rounded-lg transition relative">
            <% if message.user.avatar.attached? %>
              <%= image_tag message.user.avatar, class: "w-10 h-10 rounded-full object-cover flex-shrink-0" %>
            <% else %>
              <div class="w-10 h-10 bg-indigo-600 rounded-full flex items-center justify-center font-bold flex-shrink-0 text-sm">
                <%= message.user.name.first.upcase %>
              </div>
            <% end %>
            <div class="flex-1">
              <div class="flex items-baseline gap-2 mb-1">
                <span class="font-semibold"><%= message.user.name %></span>
                <span class="text-xs text-gray-500"><%= time_ago_in_words(message.created_at) %> ago</span>
              </div>
              <div class="markdown-content" id="message-content-<%= message.id %>"><%= markdown(message.content).html_safe %></div>
              
              <!-- Edit form (hidden by default) -->
              <div id="edit-form-<%= message.id %>" class="hidden mt-2">
                <%= form_with model: message, url: channel_chat_message_path(@channel, message), method: :patch, class: "space-y-2" do |f| %>
                  <%= f.text_area :content, value: message.content, class: "w-full bg-gray-900 border border-gray-700 rounded-lg px-4 py-3 text-white resize-none focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 focus:outline-none", rows: 3 %>
                  <div class="flex gap-2">
                    <%= f.submit "Save", class: "px-4 py-2 bg-indigo-600 hover:bg-indigo-500 rounded-lg text-sm font-semibold transition cursor-pointer" %>
                    <button type="button" onclick="cancelEdit(<%= message.id %>)" class="px-4 py-2 bg-gray-700 hover:bg-gray-600 rounded-lg text-sm font-semibold transition">Cancel</button>
                  </div>
                <% end %>
              </div>
              
              <% if message.attachments.attached? %>
                <div class="mt-2 space-y-2">
                  <% message.attachments.each do |attachment| %>
                    <% if attachment.content_type.start_with?('image/') %>
                      <%= link_to rails_blob_path(attachment), target: "_blank", class: "block" do %>
                        <%= image_tag rails_blob_path(attachment), class: "max-w-md rounded-lg border border-gray-700 hover:border-indigo-500 transition cursor-pointer" %>
                      <% end %>
                    <% else %>
                      <%= link_to rails_blob_path(attachment, disposition: "attachment"), class: "inline-flex items-center gap-2 px-3 py-2 bg-gray-700 hover:bg-gray-600 rounded-lg text-sm transition" do %>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13"></path></svg>
                        <%= attachment.filename %>
                      <% end %>
                    <% end %>
                  <% end %>
                </div>
              <% end %>
            </div>
            
            <!-- Message actions dropdown (only for own messages) -->
            <% if message.user == Current.user %>
              <div class="opacity-0 group-hover:opacity-100 transition">
                <div class="relative">
                  <button onclick="toggleMessageMenu(<%= message.id %>)" class="p-1 hover:bg-gray-700 rounded text-gray-400 hover:text-white transition">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path d="M10 6a2 2 0 110-4 2 2 0 010 4zM10 12a2 2 0 110-4 2 2 0 010 4zM10 18a2 2 0 110-4 2 2 0 010 4z"></path></svg>
                  </button>
                  <div id="message-menu-<%= message.id %>" class="hidden absolute right-0 mt-1 w-48 bg-gray-800 border border-gray-700 rounded-lg shadow-xl z-10">
                    <button onclick="startEdit(<%= message.id %>)" class="w-full text-left px-4 py-2 hover:bg-gray-700 transition flex items-center gap-2 rounded-t-lg">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
                      Edit message
                    </button>
                    <%= button_to channel_chat_message_path(@channel, message), method: :delete, data: { confirm: "Are you sure you want to delete this message?" }, class: "w-full text-left px-4 py-2 hover:bg-gray-700 transition flex items-center gap-2 text-red-400 hover:text-red-300 rounded-b-lg" do %>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
                      Delete message
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      <% else %>
        <div class="text-center py-16">
          <p class="text-gray-500">No messages yet. Start the conversation!</p>
        </div>
      <% end %>
    </div>
    
    <!-- Message Composer -->
    <div class="border-t border-gray-700 p-4">
      <%= form_with model: [@channel, @new_message], url: channel_chat_messages_path(@channel), id: "message-form", class: "space-y-3" do |f| %>
        <!-- Formatting Toolbar -->
        <div class="flex items-center gap-1 pb-2 border-b border-gray-700">
          <button type="button" onclick="insertBold()" class="p-2 hover:bg-gray-700 rounded text-gray-400 hover:text-white transition" title="Bold">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 4h8a4 4 0 014 4 4 4 0 01-4 4H6z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 12h9a4 4 0 014 4 4 4 0 01-4 4H6z"></path></svg>
          </button>
          <button type="button" onclick="insertItalic()" class="p-2 hover:bg-gray-700 rounded text-gray-400 hover:text-white transition" title="Italic">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path></svg>
          </button>
          <button type="button" onclick="insertStrikethrough()" class="p-2 hover:bg-gray-700 rounded text-gray-400 hover:text-white transition" title="Strikethrough">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12h18M9 5l6 14M15 5L9 19"></path></svg>
          </button>
          <div class="w-px h-6 bg-gray-700 mx-1"></div>
          <button type="button" onclick="insertInlineCode()" class="p-2 hover:bg-gray-700 rounded text-gray-400 hover:text-white transition" title="Inline Code">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path></svg>
          </button>
          <button type="button" onclick="insertCodeBlock()" class="p-2 hover:bg-gray-700 rounded text-gray-400 hover:text-white transition" title="Code Block">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
          </button>
          <div class="w-px h-6 bg-gray-700 mx-1"></div>
          <button type="button" onclick="insertLink()" class="p-2 hover:bg-gray-700 rounded text-gray-400 hover:text-white transition" title="Link">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path></svg>
          </button>
          <button type="button" onclick="insertOrderedList()" class="p-2 hover:bg-gray-700 rounded text-gray-400 hover:text-white transition" title="Ordered List">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4h18M3 12h18M3 20h18"></path></svg>
          </button>
          <button type="button" onclick="insertUnorderedList()" class="p-2 hover:bg-gray-700 rounded text-gray-400 hover:text-white transition" title="Unordered List">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
          </button>
          <button type="button" onclick="insertQuote()" class="p-2 hover:bg-gray-700 rounded text-gray-400 hover:text-white transition" title="Quote">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path></svg>
          </button>
          <div class="w-px h-6 bg-gray-700 mx-1"></div>
          <button type="button" onclick="openGifModal()" class="p-2 hover:bg-gray-700 rounded text-gray-400 hover:text-white transition" title="GIF">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
          </button>
          <%= f.file_field :attachments, multiple: true, id: "file-input", class: "hidden" %>
          <button type="button" onclick="document.getElementById('file-input').click()" class="p-2 hover:bg-gray-700 rounded text-gray-400 hover:text-white transition" title="Attach File">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.172 7l-6.586 6.586a2 2 0 102.828 2.828l6.414-6.586a4 4 0 00-5.656-5.656l-6.415 6.585a6 6 0 108.486 8.486L20.5 13"></path></svg>
          </button>
        </div>
        
        <%= f.text_area :content, rows: 3, placeholder: "Type a message... (Press Enter to send, Shift+Enter for new line)", id: "message-input", class: "w-full bg-gray-800 border-0 px-4 py-3 text-white placeholder-gray-500 focus:outline-none resize-none", required: true, onkeydown: "if(event.key === 'Enter' && !event.shiftKey) { event.preventDefault(); document.getElementById('message-form').requestSubmit(); }" %>
        
        <div class="flex items-center justify-end">
          <%= f.submit "Send", class: "px-6 py-2 bg-indigo-600 hover:bg-indigo-500 rounded-lg font-semibold transition cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- New Channel Modal -->
<div id="newChannelModal" class="hidden fixed inset-0 bg-black/50 backdrop-blur-sm z-50 flex items-center justify-center p-6">
  <div class="bg-gray-800 border border-gray-700 rounded-2xl max-w-md w-full p-8">
    <div class="flex items-center justify-between mb-6">
      <h2 class="text-2xl font-bold">Create Channel</h2>
      <button onclick="document.getElementById('newChannelModal').classList.add('hidden')" class="text-gray-400 hover:text-white">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
      </button>
    </div>
    
    <%= form_with model: Channel.new, url: channels_path, class: "space-y-4" do |f| %>
      <div>
        <label class="block text-sm font-semibold mb-2">Channel Name</label>
        <%= f.text_field :name, placeholder: "e.g., marketing", class: "w-full bg-gray-900 border border-gray-700 rounded-lg px-4 py-3 text-white placeholder-gray-500 focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 focus:outline-none" %>
        <p class="text-xs text-gray-500 mt-1">Lowercase letters, numbers, and hyphens only</p>
      </div>
      
      <div>
        <label class="block text-sm font-semibold mb-2">Description (optional)</label>
        <%= f.text_area :description, rows: 2, placeholder: "What's this channel about?", class: "w-full bg-gray-900 border border-gray-700 rounded-lg px-4 py-3 text-white placeholder-gray-500 focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 focus:outline-none resize-none" %>
      </div>
      
      <div class="flex items-center gap-4">
        <%= f.submit "Create Channel", class: "flex-1 py-3 bg-indigo-600 hover:bg-indigo-500 rounded-lg font-semibold transition cursor-pointer" %>
        <button type="button" onclick="document.getElementById('newChannelModal').classList.add('hidden')" class="px-6 py-3 bg-gray-700 hover:bg-gray-600 rounded-lg font-semibold transition">
          Cancel
        </button>
      </div>
    <% end %>
  </div>
</div>

