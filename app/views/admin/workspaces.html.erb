<div class="min-h-screen bg-gradient-to-br from-gray-900 via-gray-900 to-indigo-950 py-10 px-6">
  <div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="mb-10 flex items-center justify-between">
      <div class="flex items-center gap-4">
        <div class="w-16 h-16 bg-gradient-to-br from-emerald-600 to-emerald-700 rounded-2xl flex items-center justify-center shadow-lg shadow-emerald-900/50">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path></svg>
        </div>
        <div>
          <h1 class="text-5xl font-black text-white mb-1 bg-gradient-to-r from-white to-gray-300 bg-clip-text text-transparent">Workspace Management</h1>
          <p class="text-gray-400 text-lg">All workspaces and their stats</p>
        </div>
      </div>
      <%= link_to admin_path, class: "group px-6 py-3 bg-gray-800/50 hover:bg-gray-700/50 border border-gray-700 hover:border-gray-600 rounded-xl font-semibold transition-all flex items-center gap-2" do %>
        <svg class="w-5 h-5 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path></svg>
        Back to Dashboard
      <% end %>
    </div>

    <!-- Workspaces Table -->
    <div class="bg-gray-800/30 backdrop-blur-sm border border-gray-700 rounded-2xl overflow-hidden shadow-2xl">
      <div class="px-6 py-4 border-b border-gray-700 bg-gray-800/50">
        <div class="flex items-center justify-between">
          <h2 class="text-2xl font-black text-white">All Workspaces (<%= @workspaces.count %>)</h2>
          <span class="px-3 py-1.5 bg-emerald-500/10 text-emerald-400 text-sm font-bold rounded-lg border border-emerald-500/20">
            <%= @workspaces.count %> total
          </span>
        </div>
      </div>
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-gray-800/70">
            <tr class="border-b border-gray-700">
              <th class="text-left py-4 px-6 text-gray-400 font-bold text-xs uppercase tracking-wider">Workspace</th>
              <th class="text-left py-4 px-6 text-gray-400 font-bold text-xs uppercase tracking-wider">Members</th>
              <th class="text-left py-4 px-6 text-gray-400 font-bold text-xs uppercase tracking-wider">Missions</th>
              <th class="text-left py-4 px-6 text-gray-400 font-bold text-xs uppercase tracking-wider">Meetings</th>
              <th class="text-left py-4 px-6 text-gray-400 font-bold text-xs uppercase tracking-wider">Created</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-700/50">
            <% @workspaces.each do |workspace| %>
              <tr class="hover:bg-gray-700/30 transition-colors">
                <td class="py-4 px-6">
                  <div>
                    <p class="text-white font-black text-lg"><%= workspace.name %></p>
                    <p class="text-gray-500 text-sm"><%= workspace.users.count %> members</p>
                  </div>
                </td>
                <td class="py-4 px-6">
                  <div class="flex -space-x-2">
                    <% workspace.users.take(5).each do |user| %>
                      <% if user.avatar.attached? %>
                        <%= image_tag user.avatar, class: "w-9 h-9 rounded-full border-2 border-gray-800 object-cover shadow-lg", title: user.name %>
                      <% else %>
                        <div class="w-9 h-9 bg-gradient-to-br from-indigo-600 to-indigo-700 rounded-full border-2 border-gray-800 flex items-center justify-center text-xs font-bold shadow-lg" title="<%= user.name %>">
                          <%= user.name.first %>
                        </div>
                      <% end %>
                    <% end %>
                    <% if workspace.users.count > 5 %>
                      <div class="w-9 h-9 bg-gray-700 rounded-full border-2 border-gray-800 flex items-center justify-center text-xs font-bold text-gray-400 shadow-lg">
                        +<%= workspace.users.count - 5 %>
                      </div>
                    <% end %>
                  </div>
                </td>
                <td class="py-4 px-6">
                  <div>
                    <p class="text-white font-bold tabular-nums"><%= workspace.missions.count %></p>
                    <p class="text-gray-500 text-xs"><%= workspace.missions.where(status: :done).count %> completed</p>
                  </div>
                </td>
                <td class="py-4 px-6">
                  <span class="text-gray-300 font-semibold tabular-nums"><%= workspace.meetings.count %></span>
                </td>
                <td class="py-4 px-6 text-gray-400 text-sm"><%= workspace.created_at.strftime("%b %d, %Y") %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
