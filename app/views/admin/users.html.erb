<div class="min-h-screen bg-gradient-to-br from-gray-900 via-gray-900 to-indigo-950 py-10 px-6">
  <div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="mb-10 flex items-center justify-between">
      <div class="flex items-center gap-4">
        <div class="w-16 h-16 bg-gradient-to-br from-indigo-600 to-indigo-700 rounded-2xl flex items-center justify-center shadow-lg shadow-indigo-900/50">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path></svg>
        </div>
        <div>
          <h1 class="text-5xl font-black text-white mb-1 bg-gradient-to-r from-white to-gray-300 bg-clip-text text-transparent">User Management</h1>
          <p class="text-gray-400 text-lg">All registered users</p>
        </div>
      </div>
      <%= link_to admin_path, class: "group px-6 py-3 bg-gray-800/50 hover:bg-gray-700/50 border border-gray-700 hover:border-gray-600 rounded-xl font-semibold transition-all flex items-center gap-2" do %>
        <svg class="w-5 h-5 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path></svg>
        Back to Dashboard
      <% end %>
    </div>

    <!-- Users Table -->
    <div class="bg-gray-800/30 backdrop-blur-sm border border-gray-700 rounded-2xl overflow-hidden shadow-2xl">
      <div class="px-6 py-4 border-b border-gray-700 bg-gray-800/50">
        <div class="flex items-center justify-between">
          <h2 class="text-2xl font-black text-white">All Users (<%= @users.count %>)</h2>
          <span class="px-3 py-1.5 bg-indigo-500/10 text-indigo-400 text-sm font-bold rounded-lg border border-indigo-500/20">
            <%= @users.count %> total
          </span>
        </div>
      </div>
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-gray-800/70">
            <tr class="border-b border-gray-700">
              <th class="text-left py-4 px-6 text-gray-400 font-bold text-xs uppercase tracking-wider">User</th>
              <th class="text-left py-4 px-6 text-gray-400 font-bold text-xs uppercase tracking-wider">Email</th>
              <th class="text-left py-4 px-6 text-gray-400 font-bold text-xs uppercase tracking-wider">Workspace</th>
              <th class="text-left py-4 px-6 text-gray-400 font-bold text-xs uppercase tracking-wider">Role</th>
              <th class="text-left py-4 px-6 text-gray-400 font-bold text-xs uppercase tracking-wider">XP</th>
              <th class="text-left py-4 px-6 text-gray-400 font-bold text-xs uppercase tracking-wider">Joined</th>
              <th class="text-left py-4 px-6 text-gray-400 font-bold text-xs uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-700/50">
            <% @users.each do |user| %>
              <tr class="hover:bg-gray-700/30 transition-colors">
                <td class="py-4 px-6">
                  <div class="flex items-center gap-3">
                    <% if user.avatar.attached? %>
                      <%= image_tag user.avatar, class: "w-11 h-11 rounded-full object-cover border-2 border-gray-700 shadow-lg" %>
                    <% else %>
                      <div class="w-11 h-11 bg-gradient-to-br from-indigo-600 to-indigo-700 rounded-full flex items-center justify-center font-bold border-2 border-gray-700 shadow-lg">
                        <%= user.name.first %>
                      </div>
                    <% end %>
                    <div>
                      <p class="text-white font-bold"><%= user.name %></p>
                      <p class="text-gray-500 text-xs"><%= user.user_stat&.rank || "ðŸŽ“ Recruit" %></p>
                    </div>
                  </div>
                </td>
                <td class="py-4 px-6 text-gray-300 font-mono text-sm"><%= user.email_address %></td>
                <td class="py-4 px-6 text-gray-300 font-medium"><%= user.workspace&.name || "N/A" %></td>
                <td class="py-4 px-6">
                  <span class="px-3 py-1.5 <%= user.role == 'captain' ? 'bg-indigo-500/20 text-indigo-400 border-indigo-500/30' : 'bg-gray-700 text-gray-300 border-gray-600' %> border rounded-lg text-xs font-bold uppercase tracking-wide">
                    <%= user.role&.titleize || "Agent" %>
                  </span>
                </td>
                <td class="py-4 px-6">
                  <div class="flex items-center gap-2">
                    <span class="text-white font-bold tabular-nums"><%= user.user_stat&.total_xp || 0 %></span>
                    <span class="text-gray-500 text-xs">XP</span>
                  </div>
                </td>
                <td class="py-4 px-6 text-gray-400 text-sm"><%= user.created_at.strftime("%b %d, %Y") %></td>
                <td class="py-4 px-6">
                  <%= button_to admin_impersonate_path(user), method: :post, class: "group px-4 py-2 bg-purple-600/20 hover:bg-purple-600/30 border border-purple-500/30 hover:border-purple-500/50 rounded-lg font-semibold text-purple-400 hover:text-purple-300 transition-all flex items-center gap-2" do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"></path></svg>
                    <span class="text-xs">Impersonate</span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
