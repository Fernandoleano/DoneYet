<div class="max-w-6xl mx-auto px-4 py-8" data-controller="team">
  <!-- Header -->
  <div class="flex items-center justify-between mb-8">
    <div>
      <h1 class="text-3xl font-bold text-white mb-2">Team Members</h1>
      <p class="text-gray-400">Manage your workspace team</p>
    </div>
    <button data-action="click->team#showInviteModal" class="px-6 py-3 bg-indigo-600 hover:bg-indigo-500 text-white font-semibold rounded-xl transition">
      + Invite Member
    </button>
  </div>

  <!-- Team List -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <% Current.user.workspace.users.each do |user| %>
      <div class="group bg-slate-800 border border-slate-700 rounded-xl p-4 flex items-center justify-between hover:border-slate-600 transition-colors">
        <div class="flex items-center gap-4">
          <!-- Avatar -->
          <div class="h-12 w-12 rounded-full bg-indigo-600 flex items-center justify-center text-white font-bold text-lg shrink-0 overflow-hidden relative">
            <% if user.avatar.attached? %>
              <%= image_tag user.avatar, class: "w-full h-full object-cover" %>
            <% else %>
              <%= user.name[0].upcase %>
            <% end %>
          </div>
          
          <!-- User Info -->
          <div>
            <div class="flex items-center gap-2">
              <h3 class="font-bold text-white text-base"><%= user.name %></h3>
            </div>
            
            <div class="flex items-center gap-3 text-sm mt-0.5">
              <span class="text-gray-500"><%= user.email_address %></span>
              <span class="text-gray-700 mx-1">|</span>
              <div class="flex items-center gap-1.5">
                <span class="text-[#d97706] font-bold text-xs uppercase tracking-wider">Lvl <%= user.user_stat&.level %></span>
                <span class="text-gray-600 text-xs">â€¢</span>
                <span class="text-gray-400 text-xs"><%= user.user_stat&.rank %></span>
              </div>
            </div>

            <% if user == Current.user %>
              <div class="mt-2">
                <span class="px-2 py-0.5 bg-[#2D2B52] text-[#818CF8] rounded text-[10px] font-bold uppercase tracking-wide">You</span>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Actions -->
        <div>
          <% if Current.user.captain? && user != Current.user %>
            <%= button_to team_member_path(user.id), method: :delete, data: { turbo_confirm: "Confirm Disavowal: Remove Agent #{user.name}?" }, class: "p-2 text-gray-600 hover:text-red-500 hover:bg-red-500/10 rounded-lg transition-all opacity-0 group-hover:opacity-100 focus:opacity-100" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Invite Modal -->
  <div data-team-target="modal" class="hidden fixed inset-0 bg-black/80 backdrop-blur-sm z-50 flex items-center justify-center">
    <div class="bg-[#1E1E1E] border border-gray-800 rounded-2xl p-8 max-w-md w-full mx-4 shadow-2xl relative overflow-hidden">
      <!-- Decorator Line -->
      <div class="absolute top-0 left-0 w-full h-1 bg-indigo-600"></div>

      <div class="flex items-center justify-between mb-8">
        <div>
          <h2 class="text-2xl font-bold text-white tracking-tight">Recruit Agent</h2>
          <p class="text-indigo-500 text-xs font-bold uppercase tracking-widest mt-1">Clearance Level 1 Required</p>
        </div>
        <button data-action="click->team#hideInviteModal" class="text-gray-500 hover:text-white transition-colors">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
        </button>
      </div>

      <%= form_with(url: team_invite_path, method: :post, class: "space-y-5") do |f| %>
        <div>
          <%= f.label :email, "COMMUNICATION CHANNEL (EMAIL)", class: "block text-[10px] font-bold text-gray-400 mb-1.5 uppercase tracking-widest" %>
          <%= f.email_field :email, class: "w-full bg-black/30 border border-gray-700 rounded-lg px-4 py-3 text-white placeholder-gray-600 focus:ring-1 focus:ring-indigo-500 focus:border-indigo-500 transition-all font-mono text-sm", placeholder: "agent@doneyet.ai", required: true %>
        </div>

        <div>
          <%= f.label :name, "IDENTITY (FULL NAME)", class: "block text-[10px] font-bold text-gray-400 mb-1.5 uppercase tracking-widest" %>
          <%= f.text_field :name, class: "w-full bg-black/30 border border-gray-700 rounded-lg px-4 py-3 text-white placeholder-gray-600 focus:ring-1 focus:ring-indigo-500 focus:border-indigo-500 transition-all font-mono text-sm", placeholder: "James Bond", required: true %>
        </div>

        <div class="bg-indigo-900/20 border border-indigo-500/20 rounded-lg p-3 flex gap-3">
          <svg class="w-5 h-5 text-indigo-400 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
          <p class="text-xs text-indigo-300 leading-relaxed">
            Target will receive encrypted transmission with secure access credentials immediately.
          </p>
        </div>

        <%= f.submit "INITIATE RECRUITMENT", class: "w-full bg-indigo-600 hover:bg-indigo-500 text-white py-3.5 rounded-lg font-bold text-sm tracking-widest uppercase transition-all shadow-lg shadow-indigo-900/20" %>
      <% end %>
    </div>
  </div>
</div>
