<div class="max-w-4xl mx-auto py-8 px-4">
  <!-- Progress Tracker -->
  <%= render 'missions/progress_tracker', mission: @mission %>

  <!-- Mission Header & Actions -->
  <div class="bg-gray-800 border border-gray-700 rounded-2xl p-6 mb-6">
    <div class="flex items-start justify-between mb-4">
      <div class="flex-1">
        <span class="inline-block px-3 py-1 mb-3 rounded-full bg-indigo-600/20 border border-indigo-500/30 text-xs font-bold uppercase tracking-wide text-indigo-300">Classified Directive</span>
        <h1 class="text-3xl font-bold text-white mb-2"><%= @mission.title %></h1>
        <div class="flex items-center gap-4 text-sm text-gray-400">
          <span>ðŸ“… Due <%= @mission.due_at.strftime("%b %d, %Y at %I:%M %p") %></span>
          <span>Â·</span>
          <span class="<%= @mission.current_stage == 'completed' ? 'text-emerald-400' : (@mission.current_stage == 'in_progress' ? 'text-indigo-400' : 'text-gray-400') %> font-semibold">
            <%= @mission.current_stage.titleize %>
          </span>
        </div>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="flex flex-wrap gap-3">
      <% unless @mission.started_at %>
        <%= button_to "â–¶ Start Mission", mark_in_progress_mission_path(@mission), method: :patch, class: "px-6 py-3 bg-indigo-600 hover:bg-indigo-500 text-white font-semibold rounded-lg transition" %>
      <% end %>
      
      <%= link_to "âœï¸ Edit Mission", edit_mission_path(@mission), class: "px-6 py-3 bg-gray-700 hover:bg-gray-600 text-white font-semibold rounded-lg transition" %>
      
      <% unless @mission.done? %>
        <%= form_with(model: @mission, class: "inline-block") do |f| %>
          <%= f.hidden_field :status, value: :done %>
          <%= f.button "âœ“ Mark Complete", class: "px-6 py-3 bg-emerald-600 hover:bg-emerald-500 text-white font-semibold rounded-lg transition cursor-pointer" %>
        <% end %>
      <% else %>
        <!-- Confetti Trigger for Completed Missions -->
        <div data-controller="confetti"></div>
      <% end %>
    </div>
  </div>

  <!-- Time Tracking Section -->
  <div class="bg-gradient-to-br from-gray-800/60 to-gray-800/40 backdrop-blur-sm border border-gray-700/50 rounded-2xl p-6 mb-6">
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-4">
        <div class="w-12 h-12 bg-indigo-600/20 rounded-full flex items-center justify-center">
          <svg class="w-6 h-6 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
        </div>
        <div>
          <h3 class="text-sm font-semibold text-gray-400 uppercase mb-1">Operation Duration</h3>
          <div class="text-3xl font-black text-white" id="timer-display" data-is-running="<%= @mission.is_timer_running %>" data-started-at="<%= @mission.timer_started_at&.iso8601 %>" data-tracked-seconds="<%= @mission.time_tracked_seconds %>">
            <%= @mission.formatted_time_tracked %>
          </div>
        </div>
      </div>

      <!-- Timer Controls -->
      <div class="flex items-center gap-2">
        <% if @mission.is_timer_running %>
          <%= button_to pause_timer_mission_path(@mission), method: :post, class: "px-6 py-3 bg-yellow-600/20 hover:bg-yellow-600/30 border border-yellow-500/30 text-yellow-400 font-semibold rounded-lg transition flex items-center gap-2" do %>
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M6 4h4v16H6V4zm8 0h4v16h-4V4z"></path></svg>
            Pause
          <% end %>
          <%= button_to stop_timer_mission_path(@mission), method: :post, data: { confirm: "Stop timer and mark mission complete?" }, class: "px-6 py-3 bg-emerald-600 hover:bg-emerald-500 text-white font-semibold rounded-lg transition flex items-center gap-2" do %>
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M6 6h12v12H6z"></path></svg>
            Stop & Complete
          <% end %>
        <% else %>
          <%= button_to start_timer_mission_path(@mission), method: :post, class: "px-6 py-3 bg-emerald-600/20 hover:bg-emerald-600/30 border border-emerald-500/30 text-emerald-400 font-semibold rounded-lg transition flex items-center gap-2" do %>
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M8 5v14l11-7z"></path></svg>
            <%= @mission.time_tracked_seconds > 0 ? "Resume" : "Start Timer" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Assignees Section -->
  <div class="bg-gray-800 border border-gray-700 rounded-2xl p-6 mb-6">
    <h3 class="text-sm font-semibold text-gray-400 mb-4 uppercase">Assigned To</h3>
    <div class="flex flex-wrap items-center gap-3">
      <!-- Primary Agent -->
      <div class="flex items-center gap-2 px-4 py-2 bg-indigo-600 rounded-lg">
        <% if @mission.agent.avatar.attached? %>
          <%= image_tag @mission.agent.avatar, class: "w-8 h-8 rounded-full object-cover" %>
        <% else %>
          <div class="w-8 h-8 rounded-full bg-indigo-700 flex items-center justify-center text-white font-bold text-sm">
            <%= @mission.agent.name[0] %>
          </div>
        <% end %>
        <span class="text-white font-semibold"><%= @mission.agent.name %></span>
        <span class="text-xs text-indigo-300 font-semibold">PRIMARY</span>
      </div>
      
      <!-- Additional Assignees -->
      <% @mission.assigned_users.each do |user| %>
        <div class="flex items-center gap-2 px-4 py-2 bg-gray-700 rounded-lg">
          <% if user.avatar.attached? %>
            <%= image_tag user.avatar, class: "w-8 h-8 rounded-full object-cover" %>
          <% else %>
            <div class="w-8 h-8 rounded-full bg-gray-600 flex items-center justify-center text-white font-bold text-sm">
              <%= user.name[0] %>
            </div>
          <% end %>
          <span class="text-white"><%= user.name %></span>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Description Section -->
  <div class="bg-gray-800 border border-gray-700 rounded-2xl p-6 mb-6">
    <h3 class="text-sm font-semibold text-gray-400 mb-4 uppercase">Mission Details</h3>
    <% if @mission.description.present? %>
      <div class="text-gray-300 whitespace-pre-wrap leading-relaxed"><%= @mission.description %></div>
    <% else %>
      <p class="text-gray-500 italic">No description provided. <%= link_to "Add one", edit_mission_path(@mission), class: "text-indigo-400 hover:underline" %></p>
    <% end %>
  </div>

  <!-- Attachments Section -->
  <% if @mission.attachments.any? %>
    <div class="bg-gray-800 border border-gray-700 rounded-2xl p-6 mb-6">
      <h3 class="text-sm font-semibold text-gray-400 mb-4 uppercase">Attachments (<%= @mission.attachments.count %>)</h3>
      
      <div class="grid grid-cols-2 gap-4">
        <% @mission.attachments.each do |attachment| %>
          <% if attachment.image? %>
            <div class="group relative">
              <%= image_tag attachment, class: "w-full h-48 object-cover rounded-lg border border-gray-600 group-hover:border-indigo-500 transition" %>
              <%= link_to "Download", rails_blob_path(attachment, disposition: "attachment"), class: "absolute bottom-2 right-2 px-3 py-1 bg-black/70 hover:bg-black text-white text-xs rounded opacity-0 group-hover:opacity-100 transition" %>
            </div>
          <% else %>
            <%= link_to rails_blob_path(attachment, disposition: "attachment"), class: "flex items-center gap-3 p-4 bg-gray-700 rounded-lg hover:bg-gray-600 transition border border-gray-600 hover:border-indigo-500" do %>
              <span class="text-2xl">ðŸ“Ž</span>
              <div class="flex-1 min-w-0">
                <p class="text-white font-semibold truncate"><%= attachment.filename %></p>
                <p class="text-xs text-gray-400"><%= number_to_human_size(attachment.byte_size) %></p>
              </div>
              <span class="text-gray-400">â†“</span>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Comments Section -->
  <div class="bg-gray-800 border border-gray-700 rounded-2xl p-6">
    <h3 class="text-sm font-semibold text-gray-400 mb-6 uppercase">Activity & Comments</h3>
    
    <!-- Comment Thread -->
    <div class="space-y-6 mb-8">
      <% if @mission.mission_comments.any? %>
        <% @mission.mission_comments.recent.each do |comment| %>
          <div class="flex gap-4">
            <% if comment.user.avatar.attached? %>
              <%= image_tag comment.user.avatar, class: "w-10 h-10 rounded-full object-cover shrink-0" %>
            <% else %>
              <div class="w-10 h-10 rounded-full bg-indigo-600 flex items-center justify-center text-white font-bold shrink-0">
                <%= comment.user.name[0] %>
              </div>
            <% end %>
            <div class="flex-1">
              <div class="flex items-center gap-2 mb-2">
                <span class="font-semibold text-white"><%= comment.user.name %></span>
                <span class="text-xs text-gray-500"><%= time_ago_in_words(comment.created_at) %> ago</span>
              </div>
              <p class="text-gray-300 mb-3"><%= comment.content %></p>
              
              <% if comment.attachments.any? %>
                <div class="flex flex-wrap gap-2">
                  <% comment.attachments.each do |attachment| %>
                    <% if attachment.image? %>
                      <%= image_tag attachment, class: "w-32 h-32 object-cover rounded border border-gray-600 hover:border-indigo-500 transition cursor-pointer" %>
                    <% else %>
                      <%= link_to rails_blob_path(attachment, disposition: "attachment"), class: "flex items-center gap-2 px-3 py-2 bg-gray-700 rounded hover:bg-gray-600 transition text-sm" do %>
                        <span>ðŸ“Ž</span>
                        <span class="text-indigo-400"><%= attachment.filename %></span>
                      <% end %>
                    <% end %>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      <% else %>
        <p class="text-center text-gray-500 italic py-8">No comments yet. Be the first to comment!</p>
      <% end %>
    </div>
    
    <!-- Add Comment Form -->
    <%= form_with model: MissionComment.new, url: mission_mission_comments_path(@mission), class: "flex gap-4" do |f| %>
      <% if Current.user.avatar.attached? %>
        <%= image_tag Current.user.avatar, class: "w-10 h-10 rounded-full object-cover shrink-0" %>
      <% else %>
        <div class="w-10 h-10 rounded-full bg-gray-700 flex items-center justify-center text-white font-bold shrink-0">
          <%= Current.user.name[0] %>
        </div>
      <% end %>
      <div class="flex-1">
        <%= f.text_area :content, placeholder: "Add a comment...", rows: 3, class: "w-full bg-gray-700 border border-gray-600 rounded-lg px-4 py-3 text-white placeholder-gray-400 focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 focus:outline-none resize-none" %>
        <div class="flex items-center justify-between mt-3">
          <div class="flex items-center gap-3">
            <%= f.label :attachments, class: "flex items-center gap-2 px-4 py-2 bg-gray-700 hover:bg-gray-600 text-gray-300 rounded-lg cursor-pointer transition" do %>
              <span>ðŸ“Ž</span>
              <span class="text-sm">Attach files</span>
              <%= f.file_field :attachments, multiple: true, class: "hidden" %>
            <% end %>
          </div>
          <%= f.submit "Post Comment", class: "px-6 py-2 bg-indigo-600 hover:bg-indigo-500 text-white font-semibold rounded-lg cursor-pointer transition" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script>
// Live Timer for Mission Time Tracking
let missionTimerInterval = null;

function initMissionTimer() {
  // Clear any existing interval
  if (missionTimerInterval) {
    clearInterval(missionTimerInterval);
    missionTimerInterval = null;
  }

  const timerDisplay = document.getElementById('timer-display');
  if (!timerDisplay) return;

  const isRunning = timerDisplay.dataset.isRunning === 'true';
  const startedAt = timerDisplay.dataset.startedAt;
  const trackedSeconds = parseInt(timerDisplay.dataset.trackedSeconds) || 0;

  if (isRunning && startedAt) {
    // Update timer every second
    missionTimerInterval = setInterval(() => {
      const started = new Date(startedAt);
      const now = new Date();
      const currentSessionSeconds = Math.floor((now - started) / 1000);
      const totalSeconds = trackedSeconds + currentSessionSeconds;

      timerDisplay.textContent = formatTime(totalSeconds);
    }, 1000);
  }
}

function formatTime(totalSeconds) {
  const hours = Math.floor(totalSeconds / 3600);
  const minutes = Math.floor((totalSeconds % 3600) / 60);
  const seconds = totalSeconds % 60;

  if (hours > 0) {
    return `${hours}h ${minutes}m`;
  } else if (minutes > 0) {
    return `${minutes}m ${seconds}s`;
  } else {
    return `${seconds}s`;
  }
}

// Initialize on page load (for non-Turbo navigation)
document.addEventListener('DOMContentLoaded', initMissionTimer);

// Initialize on Turbo navigation
document.addEventListener('turbo:load', initMissionTimer);

// Cleanup on Turbo before cache
document.addEventListener('turbo:before-cache', () => {
  if (missionTimerInterval) {
    clearInterval(missionTimerInterval);
    missionTimerInterval = null;
  }
});
</script>

