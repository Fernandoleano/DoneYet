<div class="max-w-7xl mx-auto" data-controller="automation-builder">
  <h1 class="text-3xl font-bold text-white mb-8">Create Automation</h1>

  <%= form_with model: @automation, class: "space-y-6" do |f| %>
    <!-- Hidden field for JSON config -->
    <%= f.hidden_field :config, value: @automation.config&.to_json || '{}', data: { automation_builder_target: "configField" } %>
    
    <!-- Name -->
    <div class="bg-gray-800 border border-gray-700 rounded-2xl p-6">
      <%= f.label :name, "Automation Name", class: "block text-sm font-medium text-gray-300 mb-2" %>
      <%= f.text_field :name, placeholder: "e.g., Weekly Team Standup", class: "w-full bg-gray-900 border border-gray-700 rounded-lg px-4 py-3 text-white placeholder-gray-500 focus:ring-2 focus:ring-indigo-500" %>
    </div>

    <!-- Type -->
    <div class="bg-gray-800 border border-gray-700 rounded-2xl p-6">
      <%= f.label :automation_type, "Automation Type", class: "block text-sm font-medium text-gray-300 mb-2" %>
      <%= f.select :automation_type, 
        options_for_select([
          ["Recurring Meeting", "recurring_meeting"],
          ["Reminder Schedule", "reminder_schedule"],
          ["Integration Trigger", "integration_trigger"]
        ], @automation.automation_type),
        {},
        class: "w-full bg-gray-900 border border-gray-700 rounded-lg px-4 py-3 text-white focus:ring-2 focus:ring-indigo-500"
      %>
    </div>

    <!-- Visual Workflow Builder -->
    <div class="bg-gray-800 border border-gray-700 rounded-2xl overflow-hidden">
      <div class="flex h-[600px]">
        <!-- Left: Block Palette -->
        <div class="w-64 bg-gray-900 border-r border-gray-700 p-4 overflow-y-auto">
          <h3 class="text-sm font-bold text-white mb-4 uppercase">Blocks</h3>
          
          <!-- Triggers -->
          <div class="mb-6">
            <p class="text-xs font-semibold text-gray-400 mb-2">TRIGGERS</p>
            <div class="space-y-2">
              <div class="block-template bg-indigo-600 hover:bg-indigo-500 p-3 rounded-lg cursor-move transition" data-block-type="trigger" data-block-subtype="schedule">
                <div class="flex items-center gap-2 text-white text-sm font-semibold">
                  <span>ğŸ“…</span>
                  <span>Schedule</span>
                </div>
                <p class="text-xs text-indigo-200 mt-1">Run on a schedule</p>
              </div>
              
              <div class="block-template bg-purple-600 hover:bg-purple-500 p-3 rounded-lg cursor-move transition" data-block-type="trigger" data-block-subtype="event">
                <div class="flex items-center gap-2 text-white text-sm font-semibold">
                  <span>âš¡</span>
                  <span>Event</span>
                </div>
                <p class="text-xs text-purple-200 mt-1">When something happens</p>
              </div>
            </div>
          </div>

          <!-- Actions -->
          <div class="mb-6">
            <p class="text-xs font-semibold text-gray-400 mb-2">ACTIONS</p>
            <div class="space-y-2">
              <div class="block-template bg-emerald-600 hover:bg-emerald-500 p-3 rounded-lg cursor-move transition" data-block-type="action" data-block-subtype="create_meeting">
                <div class="flex items-center gap-2 text-white text-sm font-semibold">
                  <span>ğŸ“</span>
                  <span>Create Meeting</span>
                </div>
                <p class="text-xs text-emerald-200 mt-1">Start a new meeting</p>
              </div>
              
              <div class="block-template bg-blue-600 hover:bg-blue-500 p-3 rounded-lg cursor-move transition" data-block-type="action" data-block-subtype="send_email">
                <div class="flex items-center gap-2 text-white text-sm font-semibold">
                  <span>ğŸ“§</span>
                  <span>Send Email</span>
                </div>
                <p class="text-xs text-blue-200 mt-1">Send an email</p>
              </div>
              
              <div class="block-template bg-pink-600 hover:bg-pink-500 p-3 rounded-lg cursor-move transition" data-block-type="action" data-block-subtype="send_slack">
                <div class="flex items-center gap-2 text-white text-sm font-semibold">
                  <span>ğŸ’¬</span>
                  <span>Send Slack</span>
                </div>
                <p class="text-xs text-pink-200 mt-1">Post to Slack</p>
              </div>
              
              <div class="block-template bg-yellow-600 hover:bg-yellow-500 p-3 rounded-lg cursor-move transition" data-block-type="action" data-block-subtype="send_reminder">
                <div class="flex items-center gap-2 text-white text-sm font-semibold">
                  <span>ğŸ””</span>
                  <span>Send Reminder</span>
                </div>
                <p class="text-xs text-yellow-200 mt-1">Send a reminder</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Center: Canvas -->
        <div class="flex-1 p-8 overflow-auto" data-automation-builder-target="canvas">
          <div class="min-h-full bg-gray-900/50 border-2 border-dashed border-gray-700 rounded-xl p-8">
            <div class="text-center text-gray-500 py-16">
              <svg class="w-16 h-16 mx-auto mb-4 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path></svg>
              <p class="text-lg font-semibold mb-2">Drag blocks here to build your automation</p>
              <p class="text-sm">Start with a trigger, then add actions</p>
            </div>
          </div>
        </div>

        <!-- Right: Properties Panel -->
        <div class="w-80 bg-gray-900 border-l border-gray-700 p-4 overflow-y-auto" data-automation-builder-target="properties">
          <h3 class="text-sm font-bold text-white mb-4 uppercase">Properties</h3>
          <div class="text-center text-gray-500 py-8">
            <p class="text-sm">Select a block to configure</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Actions -->
    <div class="flex gap-4">
      <%= f.submit "Create Automation", class: "flex-1 px-6 py-3 bg-indigo-600 hover:bg-indigo-500 text-white font-semibold rounded-lg transition" %>
      <%= link_to "Cancel", automations_path, class: "px-6 py-3 bg-gray-700 hover:bg-gray-600 text-white font-semibold rounded-lg transition" %>
    </div>
  <% end %>
</div>
