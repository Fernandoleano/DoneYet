<div class="max-w-2xl mx-auto p-8 mt-10 bg-gray-800 border border-gray-700 rounded-2xl shadow-none">
  <div class="flex items-center gap-3 mb-6 border-b border-gray-700 pb-4">
    <div class="h-10 w-10 bg-indigo-600 rounded-lg flex items-center justify-center">
       <span class="text-xl">üìÅ</span>
    </div>
    <div>
      <h1 class="text-xl font-bold text-white">Start New Briefing</h1>
      <p class="text-xs text-gray-400">Create a meeting and connect your Google Meet</p>
    </div>
  </div>
  
  <%= form_with(model: @meeting, class: "space-y-6") do |form| %>
    <% if @meeting.errors.any? %>
      <div class="bg-red-500/10 text-red-400 p-4 rounded-lg border border-red-500/20 text-sm">
        <ul class="list-disc pl-4 space-y-1">
          <% @meeting.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :title, "Briefing Title", class: "block text-xs font-bold uppercase text-gray-400 mb-1.5" %>
      <%= form.text_field :title, class: "block w-full rounded-lg bg-gray-900 border-gray-700 text-white placeholder-gray-600 focus:ring-2 focus:ring-indigo-600 focus:border-transparent transition text-sm py-2.5", placeholder: "e.g., Q1 Planning Session", autofocus: true %>
    </div>

    <div class="bg-gray-900 border border-gray-700 rounded-lg p-4">
      <div class="flex items-start gap-3 mb-3">
        <svg class="w-5 h-5 text-indigo-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
        <div class="flex-1">
          <p class="text-sm font-semibold text-white mb-1">Connect Google Meet (Optional)</p>
          <ol class="text-xs text-gray-400 space-y-1 list-decimal list-inside">
            <li>Go to <a href="https://meet.google.com/new" target="_blank" class="text-indigo-400 hover:underline">meet.google.com/new</a></li>
            <li>Copy the meeting link (e.g., meet.google.com/abc-defg-hij)</li>
            <li>Paste it below</li>
          </ol>
        </div>
      </div>
      <%= form.text_field :meet_code, class: "block w-full rounded-lg bg-gray-800 border-gray-600 text-white placeholder-gray-500 focus:ring-2 focus:ring-indigo-600 text-sm py-2", placeholder: "meet.google.com/abc-defg-hij (or just: abc-defg-hij)" %>
    </div>

    <div class="flex gap-3">
      <%= form.submit "Create Briefing", class: "flex-1 flex justify-center py-3 px-4 rounded-xl font-bold text-white bg-indigo-600 hover:bg-indigo-500 transition focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-600 focus:ring-offset-gray-900" %>
    </div>
  <% end %>
</div>
