<div class="min-h-screen bg-gradient-to-br from-gray-900 via-gray-900 to-indigo-950" data-controller="meet">
  <div class="max-w-7xl mx-auto px-6 py-8">
    <!-- Header Section -->
    <div class="mb-8">
      <div class="flex items-start justify-between">
        <div class="flex-1">
          <div class="flex items-center gap-3 mb-3">
            <% if @meeting.briefing? %>
              <span class="flex items-center gap-2 px-4 py-2 bg-red-500/10 text-red-400 border border-red-500/30 rounded-full text-sm font-bold animate-pulse backdrop-blur-sm" data-meet-target="statusBadge">
                <span class="relative flex h-3 w-3">
                  <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-red-400 opacity-75"></span>
                  <span class="relative inline-flex rounded-full h-3 w-3 bg-red-500"></span>
                </span>
                LIVE SESSION
              </span>
            <% else %>
              <span class="px-4 py-2 bg-gray-800/50 text-gray-300 border border-gray-700/50 rounded-full text-sm font-bold uppercase backdrop-blur-sm">
                <%= @meeting.status %>
              </span>
            <% end %>
          </div>
          
          <h1 class="text-4xl font-black text-white mb-2 tracking-tight"><%= @meeting.title %></h1>
          <div class="flex items-center gap-3 text-gray-400">
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg>
              <span class="text-sm font-medium">Captain <%= @meeting.captain.name %></span>
            </div>
            <span class="text-gray-600">â€¢</span>
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
              <span class="text-sm"><%= @meeting.created_at.to_date.to_fs(:long) %></span>
            </div>
          </div>
        </div>
        
        <% if @meeting.meet_code.present? %>
          <a href="<%= @meeting.meet_url %>" target="_blank" class="flex items-center gap-3 px-6 py-3.5 bg-gradient-to-r from-green-600 to-emerald-600 hover:from-green-500 hover:to-emerald-500 text-white rounded-xl font-bold transition shadow-lg shadow-green-900/30 hover:shadow-xl hover:shadow-green-900/40 hover:scale-105 transform">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path></svg>
            Open Google Meet
          </a>
        <% end %>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Quick Capture -->
        <% if @meeting.briefing? %>
          <div class="bg-gradient-to-br from-gray-800/50 to-gray-800/30 backdrop-blur-sm border border-gray-700/50 rounded-2xl p-6 shadow-xl">
            <div class="flex items-center gap-3 mb-6">
              <div class="p-2 bg-indigo-500/10 rounded-lg">
                <svg class="w-6 h-6 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
              </div>
              <h2 class="text-xl font-bold text-white">Quick Capture</h2>
            </div>
            
            <%= form_with(model: [@meeting, Mission.new], class: "space-y-4") do |f| %>
              <%= f.text_field :title, class: "w-full bg-gray-900/50 border border-gray-700/50 rounded-xl px-5 py-4 text-white placeholder-gray-500 focus:ring-2 focus:ring-indigo-500 focus:border-transparent text-lg font-medium backdrop-blur-sm", placeholder: "What needs to be done?", data: { meet_target: "titleInput" }, autofocus: true %>
              
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <%= f.collection_select :agent_id, Current.user.workspace.users, :id, :name, { prompt: "ðŸ‘¤ Assign to..." }, { class: "bg-gray-900/50 border border-gray-700/50 rounded-xl px-5 py-3.5 text-white focus:ring-2 focus:ring-indigo-500 font-medium backdrop-blur-sm" } %>
                <%= f.datetime_field :due_at, class: "bg-gray-900/50 border border-gray-700/50 rounded-xl px-5 py-3.5 text-white focus:ring-2 focus:ring-indigo-500 font-medium backdrop-blur-sm", value: 24.hours.from_now.strftime("%Y-%m-%dT%H:%M"), data: { meet_target: "dateInput" } %>
              </div>

              <div class="flex items-center gap-3 pt-2">
                <button type="button" class="px-4 py-2.5 bg-gray-900/50 hover:bg-gray-800/50 border border-gray-700/50 rounded-lg text-sm text-gray-300 font-semibold transition backdrop-blur-sm hover:border-gray-600" data-action="click->meet#setToday">Today</button>
                <button type="button" class="px-4 py-2.5 bg-gray-900/50 hover:bg-gray-800/50 border border-gray-700/50 rounded-lg text-sm text-gray-300 font-semibold transition backdrop-blur-sm hover:border-gray-600" data-action="click->meet#setTomorrow">Tomorrow</button>
                <button type="button" class="px-4 py-2.5 bg-gray-900/50 hover:bg-gray-800/50 border border-gray-700/50 rounded-lg text-sm text-gray-300 font-semibold transition backdrop-blur-sm hover:border-gray-600" data-action="click->meet#setFriday">Friday</button>
                <div class="flex-1"></div>
                <%= f.button class: "px-8 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-500 hover:to-purple-500 rounded-xl font-bold text-white transition shadow-lg shadow-indigo-900/30 hover:shadow-xl hover:scale-105 transform" do %>
                  Add Mission
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>

        <!-- Missions List -->
        <div>
          <div class="flex items-center justify-between mb-5">
            <h2 class="text-2xl font-bold text-white flex items-center gap-3">
              <span>Missions</span>
              <span class="px-3 py-1 bg-indigo-500/10 text-indigo-400 rounded-full text-base font-bold"><%= @meeting.missions.count %></span>
            </h2>
          </div>

          <div id="missions" class="space-y-3">
            <% @meeting.missions.order(created_at: :desc).each do |mission| %>
              <%= link_to mission, class: "block group" do %>
                <div class="bg-gradient-to-br from-gray-800/40 to-gray-800/20 backdrop-blur-sm border border-gray-700/50 rounded-xl p-5 hover:border-indigo-500/50 hover:shadow-lg hover:shadow-indigo-900/20 transition-all duration-200 group-hover:scale-[1.02] transform">
                  <div class="flex items-start gap-4">
                    <% if mission.agent.avatar.attached? %>
                      <%= image_tag mission.agent.avatar, class: "h-12 w-12 rounded-xl object-cover shrink-0 shadow-lg ring-2 ring-gray-700/50" %>
                    <% else %>
                      <div class="h-12 w-12 rounded-xl bg-gradient-to-br from-indigo-600 to-purple-600 flex items-center justify-center font-black text-white text-lg shrink-0 shadow-lg">
                        <%= mission.agent.name[0] %>
                      </div>
                    <% end %>
                    <div class="flex-1 min-w-0">
                      <h3 class="font-bold text-white text-lg mb-2 group-hover:text-indigo-400 transition"><%= mission.title %></h3>
                      <div class="flex items-center gap-3 text-sm text-gray-400 flex-wrap">
                        <span class="font-medium"><%= mission.agent.name %></span>
                        <span class="text-gray-600">â€¢</span>
                        <span>Due <%= mission.due_at.strftime("%b %d") %></span>
                        <% case mission.current_stage %>
                        <% when 'completed' %>
                          <span class="px-3 py-1 bg-emerald-500/10 text-emerald-400 border border-emerald-500/20 rounded-full text-xs font-bold">âœ“ COMPLETED</span>
                        <% when 'in_progress' %>
                          <span class="px-3 py-1 bg-indigo-500/10 text-indigo-400 border border-indigo-500/20 rounded-full text-xs font-bold">â†’ IN PROGRESS</span>
                        <% else %>
                          <span class="px-3 py-1 bg-gray-500/10 text-gray-400 border border-gray-500/20 rounded-full text-xs font-bold">DISPATCHED</span>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>

            <% if @meeting.missions.empty? %>
              <div class="text-center py-16 border-2 border-dashed border-gray-800/50 rounded-2xl backdrop-blur-sm">
                <div class="inline-flex items-center justify-center w-16 h-16 bg-gray-800/50 rounded-full mb-4">
                  <svg class="w-8 h-8 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path></svg>
                </div>
                <p class="text-gray-500 font-medium">No missions yet. Start capturing!</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="space-y-4">
        <% if @meeting.briefing? %>
          <%= button_to "End & Dispatch â†’", dispatch_meeting_meeting_path(@meeting), method: :post, class: "w-full bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-500 hover:to-purple-500 text-white py-5 rounded-xl font-black text-lg transition shadow-xl shadow-indigo-900/30 hover:shadow-2xl hover:scale-105 transform", data: { turbo: false, confirm: "Dispatch all missions to agents?" } %>
        <% else %>
          <div class="bg-gradient-to-br from-gray-800/40 to-gray-800/20 backdrop-blur-sm border border-gray-700/50 rounded-xl p-6 text-center">
            <p class="text-sm text-gray-500 font-semibold uppercase tracking-wider mb-2">Status</p>
            <p class="font-black text-white text-2xl"><%= @meeting.status.titleize %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
