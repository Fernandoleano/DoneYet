<div class="bg-gray-800 border border-gray-700 rounded-2xl p-8">
  <h1 class="text-3xl font-bold text-white mb-2 text-center">Create your account</h1>
  <p class="text-gray-400 text-center mb-8">Start supercharging your meetings</p>

  <%= form_with model: @user, url: registrations_path, class: "space-y-6" do |form| %>
    <% if @user.errors.any? %>
      <div class="bg-red-500/10 border border-red-500/20 text-red-400 rounded-lg p-4 text-sm">
        <ul class="list-disc pl-4 space-y-1">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :name, "Full name", class: "block text-sm font-medium text-gray-300 mb-2" %>
      <%= form.text_field :name, required: true, autofocus: true, placeholder: "John Doe", class: "w-full bg-gray-900 border border-gray-700 rounded-lg px-4 py-3 text-white placeholder-gray-500 focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition" %>
    </div>

    <div>
      <%= form.label :workspace_name, "Organization name", class: "block text-sm font-medium text-gray-300 mb-2" %>
      <%= form.text_field :workspace_name, required: true, placeholder: "Acme Inc.", class: "w-full bg-gray-900 border border-gray-700 rounded-lg px-4 py-3 text-white placeholder-gray-500 focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition" %>
    </div>

    <div>
      <%= form.label :email_address, "Email address", class: "block text-sm font-medium text-gray-300 mb-2" %>
      <%= form.email_field :email_address, required: true, autocomplete: "email", placeholder: "you@company.com", class: "w-full bg-gray-900 border border-gray-700 rounded-lg px-4 py-3 text-white placeholder-gray-500 focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition" %>
    </div>

    <div>
      <%= form.label :password, "Password", class: "block text-sm font-medium text-gray-300 mb-2" %>
      <%= form.password_field :password, required: true, autocomplete: "new-password", placeholder: "Create a strong password", class: "w-full bg-gray-900 border border-gray-700 rounded-lg px-4 py-3 text-white placeholder-gray-500 focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition" %>
      <p class="text-xs text-gray-500 mt-1">Must be at least 8 characters</p>
    </div>

    <div>
      <%= form.label :password_confirmation, "Confirm password", class: "block text-sm font-medium text-gray-300 mb-2" %>
      <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", placeholder: "Re-enter your password", class: "w-full bg-gray-900 border border-gray-700 rounded-lg px-4 py-3 text-white placeholder-gray-500 focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition" %>
    </div>

    <%= form.submit "Create account", class: "w-full bg-indigo-600 hover:bg-indigo-500 text-white font-semibold py-3 rounded-lg transition cursor-pointer" %>
  <% end %>

  <div class="mt-6 text-center text-sm text-gray-400">
    Already have an account?
    <%= link_to "Sign in", new_session_path, class: "text-indigo-400 hover:text-indigo-300 font-semibold transition" %>
  </div>
</div>
