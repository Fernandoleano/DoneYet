<div class="min-h-screen bg-gray-900 pt-24 pb-12 relative overflow-hidden">
  <!-- Dynamic Background -->
  <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-indigo-900/20 via-gray-900 to-gray-900 z-0"></div>
  
  <!-- Grid Pattern -->
  <div class="absolute inset-0 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-20 z-0 mix-blend-overlay"></div>
  
  <div class="max-w-4xl mx-auto px-6 relative z-10">
    <!-- Header -->
    <div class="text-center mb-12">
      <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-indigo-500/10 border border-indigo-500/20 text-indigo-400 text-xs font-bold uppercase tracking-wider mb-6 animate-fade-in-down">
        <span class="relative flex h-2 w-2">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-indigo-400 opacity-75"></span>
          <span class="relative inline-flex rounded-full h-2 w-2 bg-indigo-500"></span>
        </span>
        Secure Channel Open
      </div>
      
      <h1 class="text-4xl md:text-6xl font-black text-white mb-6 tracking-tight animate-fade-in-up">
        Establish <span class="text-transparent bg-clip-text bg-gradient-to-r from-indigo-400 to-purple-400">Secure Comms</span>
      </h1>
      <p class="text-xl text-gray-400 max-w-2xl mx-auto animate-fade-in-up delay-100">
        Ready to deploy? Transmit your mission parameters directly to HQ. End-to-end encryption active.
      </p>
    </div>

    <!-- Contact Form Card -->
    <div class="bg-gray-800/50 backdrop-blur-xl border border-gray-700/50 rounded-2xl p-8 md:p-12 shadow-2xl animate-fade-in-up delay-200">
      <form class="space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Codename -->
          <div class="space-y-2">
            <label for="codename" class="block text-xs font-bold text-gray-400 uppercase tracking-wider">Agent Codename</label>
            <input type="text" id="codename" placeholder="e.g. 007" class="w-full bg-gray-900/50 border border-gray-700 rounded-xl px-4 py-3 text-white placeholder-gray-600 focus:outline-none focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 transition-all font-mono">
          </div>
          
          <!-- Frequency -->
          <div class="space-y-2">
            <label for="frequency" class="block text-xs font-bold text-gray-400 uppercase tracking-wider">Secure Frequency (Email)</label>
            <input type="email" id="frequency" placeholder="agent@agency.com" class="w-full bg-gray-900/50 border border-gray-700 rounded-xl px-4 py-3 text-white placeholder-gray-600 focus:outline-none focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 transition-all font-mono">
          </div>
        </div>

        <!-- Mission Objective -->
        <div class="space-y-2">
          <label for="objective" class="block text-xs font-bold text-gray-400 uppercase tracking-wider">Mission Objective</label>
          <select id="objective" class="w-full bg-gray-900/50 border border-gray-700 rounded-xl px-4 py-3 text-white placeholder-gray-600 focus:outline-none focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 transition-all font-mono appearance-none">
            <option>Select Clearance Level...</option>
            <option>Requesting Demo</option>
            <option>Reporting Intelligence (Bug)</option>
            <option>Feature Request</option>
            <option>Other / Classified</option>
          </select>
        </div>

        <!-- Intel Report -->
        <div class="space-y-2">
          <label for="intel" class="block text-xs font-bold text-gray-400 uppercase tracking-wider">Intel Report</label>
          <textarea id="intel" rows="5" placeholder="Enter transmission data..." class="w-full bg-gray-900/50 border border-gray-700 rounded-xl px-4 py-3 text-white placeholder-gray-600 focus:outline-none focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500 transition-all font-mono resize-none"></textarea>
        </div>

        <!-- Submit -->
        <button type="submit" class="w-full bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-500 hover:to-purple-500 text-white font-bold py-4 rounded-xl shadow-lg shadow-indigo-500/20 transform transition hover:-translate-y-1 active:translate-y-0 flex items-center justify-center gap-2 group">
          <span>Transmit Encrypted Data</span>
          <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg>
        </button>
      </form>

      <!-- Security Footer -->
      <div class="mt-8 pt-6 border-t border-gray-700/50 flex items-center justify-center gap-4 text-xs text-gray-500 font-mono">
        <div class="flex items-center gap-1.5">
          <svg class="w-3 h-3 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path></svg>
          256-bit AES Encryption
        </div>
        <span>â€¢</span>
        <div>IP: <span class="text-gray-400">Classified</span></div>
      </div>
    </div>
  </div>
</div>
